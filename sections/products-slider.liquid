  {
    "name": "Product Slider",
    "settings": [
		{
          "type": "text",
          "id": "section_title",
          "label": "Section Title",
	      "default": "Shop Now"
		},
        {
          "type": "collection",
          "id": "feature_collection",
          "label": "Chose Collection to show on slideshow"
        }
	],
	"presets": [
