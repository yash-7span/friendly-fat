<div class="section-hero-terms wf-section">
  <div class="page-padding">
    <div class="container-large">
      <div class="terms-wrapper">
        <h1 class="heading-large left-align">
          {{ page.title | escape }}
        </h1>
        <div class="page--content">
          {{ page.content }}
        </div>
      </div>
    </div>
  </div>
  <div class="background-wave-wrapper">
    <div class="wave-wrapper"></div>
    <div class="wave-continue"></div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "div",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
