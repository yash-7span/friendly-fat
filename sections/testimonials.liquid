<div class="section-testimonial wf-section">
  <div class="page-padding">
    <div class="container-xlarge">
      <div bind="d8aff258-abd7-8f7b-7814-aab5c8914d6c" class="testimonial-content-wrapper">
        {% assign testimonials = section.blocks | where: 'type', 'testimonials' %}
      	{% for block in testimonials %}
        <div block="home-testimonial-cards" class="testimonials-cards">
          <div class="testimonial-image-wrapper"><img src="{{ block.settings.image | img_url: 'master' }}" loading="lazy" option:image="home-testimonial-FFC-img" alt="" class="img-full-width"></div>
          <div class="testimonial-text-wrapper">
            <p option:textarea="home-testimonial-paragraph" class="text-size-medium">&quot;{{ block.settings.comment }}”<br></p>
            <div class="testimonial-name-wrapper">
              <div option:text="home-testimonial-name" class="heading-small text-size26">{{ block.settings.name }}</div>
              <div option:textarea="home-testimonial-description" class="text-size-regular margin-top-8">{{ block.settings.possition }}</div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="slider-testimonial-wrapper">
        <div data-delay="4000" data-animation="slide" class="testimonial-slider w-slider" data-autoplay="false" data-easing="ease" data-hide-arrows="false" data-disable-swipe="false" data-autoplay-limit="0" data-nav-spacing="3" data-duration="500" data-infinite="true">
          <div class="slider-mask w-slider-mask">
            {% assign testimonials = section.blocks | where: 'type', 'testimonials' %}
      		{% for block in testimonials %}
            <div class="testimonial-slider-item w-slide">
              <div block="slide-item-block" class="slider-item-wrapper">
                <div class="item-flex">
                  <div class="quote-wrapper">
                    <p class="text-size-medium">&quot;{{ block.settings.comment }}”<br></p>
                  </div>
                  <div class="item-img-wrapper"><img src="{{ block.settings.image | img_url: 'master' }}" loading="lazy" alt=""></div>
                  <div class="testimonial-name-wrapper">
                    <div class="heading-small text-size26">{{ block.settings.name }}</div>
                    <div class="text-size-regular margin-top-8">{{ block.settings.possition }}</div>
                  </div>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
          <div class="left-arrow-2 w-slider-arrow-left">
            <div class="w-icon-slider-left"></div>
          </div>
          <div class="right-arrow w-slider-arrow-right">
            <div class="w-icon-slider-right"></div>
          </div>
          <div class="slide-nav-2 w-slider-nav w-round"></div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Testimonials",
    "settings": [],
	"blocks": [
        {
          "type": "testimonials",
          "name": "Testimonials",
          "settings": [            
			{
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
			{
              "type": "textarea",
              "id": "comment",
              "label": "Comment"
            },
			{
              "type": "text",
              "id": "name",
              "label": "Name"
            },
            {
              "type": "textarea",
              "id": "possition",
              "label": "Possition"
            }
          ]
        }
	],
	"presets": [
		{
		  "name": {
          "en": "Testimonials"
  		}
  	  }
    ]
  }
{% endschema %}

